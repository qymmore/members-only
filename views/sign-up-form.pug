extends layout 

block content 
    h2= title
    form.auth-form(action='/sign-up' method="POST")
        p.auth-alternative Already registered? 
            a(href='/log-in') Log in 
        br

        div
            label(for='username') Username 
            br
            input#username(type='text' name='username' required=true maxLength=20)
            if (error)
                p(style="color: red") #{error}
        div
            label(for='password') Password 
            br
            input#password(name='password' type='text' required=true)
            br
        div
            label(for='confirmPassword') Confirm password 
            br
            input#confirmPassword(name='confirmPassword' type='text' required=true)
            if (passwordConfirmationError)
                p(style="color: red") #{passwordConfirmationError}

            label(style="margin-top: 1em") Select your avatar: 
        section.avatar-container 
            input#chopper(type='radio' name='avatar' value='chopper' required=true)
            label.avatar.chopper(for='chopper')
            input#luffy(type='radio' name='avatar' value='luffy' required=true)
            label.avatar.luffy(for='luffy')
            input#robin(type='radio' name='avatar' value='robin' required=true)
            label.avatar.robin(for='robin')
            input#shanks(type='radio' name='avatar' value='shanks' required=true)
            label.avatar.shanks(for='shanks')
            input#uta(type='radio' name='avatar' value='uta' required=true)
            label.avatar.uta(for='uta')
            input#zoro(type='radio' name='avatar' value='zoro' required=true)
            label.avatar.zoro(for='zoro')
        button(type='submit') Register
        br
        button(type='submit')  
            a(href='/') Back
    
    if (errors)
        p #{errors}

